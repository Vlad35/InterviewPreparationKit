package Trees.BinaryTree;

public class Node {
    int value;
    Node left;
    Node right;

    Node(int value) {
        this.value = value;
        this.right = null;
        this.left = null;
    }

    public void setValue(int value) {
        this.value = value;
    }

    public void setLeft(Node left) {
        this.left = left;
    }

    public void setRight(Node right) {
        this.right = right;
    }

    public int getValue() {
        return value;
    }

    public Node getLeft() {
        return left;
    }

    public Node getRight() {
        return right;
    }
}
